<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_tixianautomatic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/orange_FF690C">

        <TextView
            android:id="@+id/tv_tixianautomatic_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40px"
            android:text=""
            android:textColor="@color/white"
            android:textSize="70px" />

        <TextView
            android:id="@+id/tv_tixianautomatic_explain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40px"
            android:layout_marginLeft="82px"
            android:layout_marginRight="40px"
            android:layout_marginTop="40px"
            android:layout_toRightOf="@id/tv_tixianautomatic_type"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="@color/white"
            android:textSize="24px" />

    </RelativeLayout>

</RelativeLayout>