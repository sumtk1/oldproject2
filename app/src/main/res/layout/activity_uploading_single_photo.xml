<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical"
    tools:context="com.gloiot.hygooilstation.ui.activity.authentication.UploadingSinglePhotoActivity">

    <include
        layout="@layout/include_titlebar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="450px"
                android:layout_margin="20px">

                <ImageView
                    android:id="@+id/iv_photo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10px"
                    android:background="@color/white"/>

                <ImageView
                    android:id="@+id/iv_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:paddingBottom="15px"
                    android:paddingLeft="15px"
                    android:src="@drawable/ic_delete_red"
                    android:visibility="gone"/>

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:layout_marginTop="30px"
                android:text="温馨提示"
                android:textColor="@color/black_333"
                android:textSize="30px"/>

            <TextView
                android:id="@+id/tv_warm_prompt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="30px"
                android:lineSpacingExtra="10px"
                android:text=""
                android:textColor="@color/gray_666"
                android:textSize="26px"/>

            <TextView
                android:id="@+id/tv_confirm"
                style="@style/style_btn_confirm_orange"
                android:layout_marginTop="100px"
                android:background="@drawable/bg_btn_juxing_orange"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
