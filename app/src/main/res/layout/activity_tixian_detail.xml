<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/activity_finishtixian"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/bg_color"
                tools:context="com.gloiot.hygooilstation.ui.activity.mine.wallet.TixianFinishedActivity">

    <include
        android:id="@+id/in_titlebar"
        layout="@layout/include_titlebar"/>

    <LinearLayout
        android:id="@+id/ll_finishtixian_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/in_titlebar"
        android:layout_marginTop="2px"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="406px">

            <ImageView
                android:id="@+id/iv_01"
                android:layout_width="160px"
                android:layout_height="160px"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="46px"
                android:src="@mipmap/dengdai"
                app:layout_auto_baseheight="width"/>

            <TextView
                android:id="@+id/tv_01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_01"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40px"
                android:text="提现申请已提交"
                android:textColor="@color/gray_666"
                android:textSize="36px"/>

            <TextView
                android:id="@+id/tv_wait_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_01"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10px"
                android:text="款项将于24小时内到账"
                android:textColor="@color/gray_999"
                android:textSize="28px"/>

            <View style="@style/match_view"/>

        </RelativeLayout>

        <RelativeLayout style="@style/style_relativelayout_96">

            <TextView
                android:id="@+id/tv_account_type"
                style="@style/black555_pint_16"
                android:text=""/>

            <TextView
                android:id="@+id/tv_finishtixian_bankcard"
                style="@style/text_right_28"
                android:text=""
                android:textSize="30px"/>
        </RelativeLayout>

        <RelativeLayout style="@style/style_relativelayout_96">

            <TextView
                style="@style/black555_pint_16"
                android:text="提现金额"/>

            <TextView
                android:id="@+id/tv_finishtixian_tixian"
                style="@style/text_right_28"
                android:text=""
                android:textSize="30px"/>
        </RelativeLayout>

        <RelativeLayout
            style="@style/style_relativelayout_96"
            android:visibility="visible">

            <TextView
                style="@style/black555_pint_16"
                android:text="手续费"/>

            <TextView
                android:id="@+id/tv_finishtixian_poundage"
                style="@style/text_right_28"
                android:text=""
                android:textSize="30px"/>
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_finishtixian_over"
        style="@style/style_btn_confirm_orange"
        android:layout_below="@id/ll_finishtixian_top"
        android:layout_marginTop="88px"
        android:text="完成"/>
</RelativeLayout>
