    <LinearLayout
        android:id="@+id/ll_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/in_titlebar"
        android:background="#ccFF690C"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="176px">

            <TextView
                android:id="@+id/tv_left_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:layout_marginTop="34px"
                android:background="@mipmap/tuoyuanbg_white"
                android:gravity="center"
                android:text="结算人"
                android:textColor="@color/white"
                android:textSize="20px" />

            <TextView
                android:id="@+id/tv_personName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:layout_marginTop="30px"
                android:layout_toRightOf="@id/tv_left_name"
                android:text=""
                android:textColor="@color/white"
                android:textSize="32px" />

            <TextView
                android:id="@+id/tv_left_danhao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_personName"
                android:layout_marginLeft="30px"
                android:layout_marginTop="16px"
                android:text="结算单号："
                android:textColor="@color/white"
                android:textSize="24px" />

            <TextView
                android:id="@+id/tv_oddNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_personName"
                android:layout_marginTop="16px"
                android:layout_toRightOf="@id/tv_left_danhao"
                android:text=""
                android:textColor="@color/white"
                android:textSize="24px" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="20px"
                android:layout_marginLeft="30px"
                android:layout_marginRight="30px">

                <TextView
                    android:id="@+id/tv_settlementdetail_starttime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#ccffffff"
                    android:textSize="20px" />

                <TextView
                    android:id="@+id/tv_settlementdetail_endtime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text=""
                    android:textColor="#ccffffff"
                    android:textSize="20px" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="5px"
                    android:layout_marginRight="5px"
                    android:layout_toLeftOf="@id/tv_settlementdetail_endtime"
                    android:layout_toRightOf="@id/tv_settlementdetail_starttime"
                    android:background="@color/white" />

            </RelativeLayout>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/red" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="190px"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">


                <TextView
                    android:id="@+id/tv_jiaoyi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="50px"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="40px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="50px"
                    android:text="交易金额"
                    android:textColor="@color/white"
                    android:textSize="28px" />

            </RelativeLayout>

            <View
                android:layout_width="2px"
                android:layout_height="80px"
                android:layout_gravity="center_vertical"
                android:background="@color/white" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_daozhang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="50px"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="40px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="50px"
                    android:text="到账金额"
                    android:textColor="@color/white"
                    android:textSize="28px" />
            </RelativeLayout>

        </LinearLayout>


    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_mid"
        android:layout_width="match_parent"
        android:layout_height="60px"
        android:layout_below="@id/ll_top">

        <TextView
            android:id="@+id/tv_left_totalNum"
            style="@style/black555_pint_16"
            android:text="累计笔数"
            android:textColor="@color/gray_666"
            android:textSize="26px" />

        <TextView
            android:id="@+id/tv_totalNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20px"
            android:layout_toRightOf="@id/tv_left_totalNum"
            android:text=""
            android:textColor="@color/gray_666"
            android:textSize="26px" />

    </RelativeLayout>

    <com.gloiot.hygooilstation.ui.widget.pulltorefresh.PullToRefreshLayout
        android:id="@+id/pulltorefreshlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_mid">

        <include layout="@layout/load_head" />

        <com.gloiot.hygooilstation.ui.widget.pulltorefresh.PullableListView
            android:id="@+id/pullablelistview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="#E0E0E0"
            android:dividerHeight="2px" />

        <include layout="@layout/load_more" />

    </com.gloiot.hygooilstation.ui.widget.pulltorefresh.PullToRefreshLayout>

</RelativeLayout>
