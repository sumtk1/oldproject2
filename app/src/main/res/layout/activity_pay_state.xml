<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical"
    tools:context="com.gloiot.hygooilstation.ui.activity.trade.aboutpay.PayStateActivity">

    <include layout="@layout/include_titlebar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="360px"
        android:layout_marginTop="24px"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="48px">

        <com.gloiot.hygooilstation.ui.widget.MdStyleProgress
            android:id="@+id/progress"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:padding="10dp" />

        <TextView
            android:id="@+id/tv_pay_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20px"
            android:text=""
            android:textColor="@color/gray_b4"
            android:textSize="34px" />

        <TextView
            android:id="@+id/tv_pay_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24px"
            android:text=""
            android:textColor="@color/gray_666"
            android:textSize="28px" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_success"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="20px"
        android:text="成功" />

    <Button
        android:id="@+id/btn_failed"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/btn_success"
        android:text="失败" />

</LinearLayout>
